<%- include('partials/header.ejs');%>

<script>
    function likecount(){
        var x =0;x++;
        
    }
</script>
 
 <div class="container">
    <h3>Created by <strong><%= Poem.writer%></strong></h3>
 </div>

 <div  class="col-lg-4 col-md-6 col-sm-6 col-xs-12" class="box">
    
    <div style="background-image: url(<%=Poem.bgtheme%>);" class="box">
       
     
     <strong style="overflow-wrap: break-word;">
        <p style="white-space:pre-wrap;"><%-Poem.poem%></p>
     </strong>              
   
    </div>
    

</div> 


<div class="container" style="margin: 30px;">
    <i class="fa fa-thumbs-o-up fa-lg" aria-hidden="true"  onclick="likecount()"></i>
    <%Poem.likes=1%>
    <%=Poem.likes%>
    <form action="/poetry/<%=Poem._id%>/comments" method="POST">
      <div class="comment-form"> <input type="text" name="comment" placeholder="Add a New Comment"></div>
         <button type="submit" style="margin: 30px;">submit</button>
    </form>
    
</div>
 <div class="container">
     <h2>Comments:</h2>
 </div>
<div class="container">
<div class="jumbotron">
<% Poem.comments.forEach(function(comments){ %>
    
    <strong>
        <p style="float: left;margin-right: 10px;"><%=comments.author%>--></p>
    </strong>   
    <p> <%=comments.text%> </p>
<%})%>
</div>
</div>
<%- include('partials/footer.ejs');%>