<%- include('partials/header.ejs');%>

<script>
    function likecount(){
        var x =0;x++;
        console.log(x);
    }
</script>


<div class="container" class="box"   style="width: 400px;height:400px ;margin-top: 30px;margin-left:10% ; border:4px solid brown; background-image:url(<%=Poem.bgtheme%>);" >
    


<h3><%=Poem.poem%></h3>
   
</div>
<div class="container" style="margin: 30px;">
    <i class="fa fa-thumbs-o-up fa-lg" aria-hidden="true"  onclick="likecount()"></i>
    <%Poem.likes%>
    <form action="/poetry/<%=Poem._id%>/comments" method="POST">
        <input type="text" name="comment" style="width: 50%; border-top-style:hidden;border-bottom-style: groove; border-right-style:hidden; border-left-style:hidden;position:center;" placeholder="Add a New Comment">
         <button type="submit" style="margin: 30px;">submit</button>
    </form>
    
</div>
<div class="container">
<% Poem.comments.forEach(function(comments){ %>
    <p> <%=comments.text%> </p>
<%})%>
</div>
<%- include('partials/footer.ejs');%>