<%- include('partials/header.ejs');%>


 
 <div class="container">
    <h3>Created by <strong><%= Poem.writer%></strong></h3>
 </div>

 <div>
    
    <div style="background-image: url(<%=Poem.bgtheme%>);" class="box">
       
     
     <strong style="overflow-wrap: break-word;">
        <p style="white-space:pre-wrap;"><%-Poem.poem%></p>
     </strong>              
   
    </div>
    

</div> 



<a class="btn btn-success" href="/likeme/<%=Poem._id%>" style="margin-left: 20%;">
    <i class="fa fa-thumbs-o-up" aria-hidden="false"></i>
</a>
<%=Poem.like%>
<p></p>
<a href="/poetry" class="btn btn-primary" style="margin-left: 20%;">Go back!</a>


<div class="container" style="margin: 30px;">
   
    <div class="row">
        
    <form action="/poetry/<%=Poem._id%>/comments" method="POST">
    <div class="col-xs-8">  <div class="comment-form"> <input type="text" name="comment" placeholder="Add a New Comment"></div></div>
     <div class="col-xs-4"> <button type="submit" style="margin: 30px;float: left;"><i class="fa fa-paper-plane" aria-hidden="false"></i></button> </div>
    </form>
    </div>
    
</div>
 <div class="container">
     <h2>Comments:</h2>
 </div>
<div class="container">
<div class="jumbotron" style="box-shadow: 4px 4px black;background-color:mediumpurple;">
<% Poem.comments.forEach(function(comments){ %>
    <div style="width: 100%;height: 30%; box-shadow: 4px 4px mediumslateblue;overflow-wrap: break-word;">
    <strong style="color: black;font-family: cursive;font-size: 10px>
        <p style="float: left;margin-right: 10px;"><%=comments.author%> (<%=comments.date%>)</p>
    </strong>   
    <p style="color: rgb(205, 239, 255);"> <%=comments.text%> </p>
    </div>
<%})%>
</div>
</div>

<%- include('partials/footer.ejs');%>