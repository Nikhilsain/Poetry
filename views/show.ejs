<%- include('partials/header.ejs');%>

<script>
    function likecount(){
        var x =0;x++;
        console.log(x);
    }
</script>
 
 <div class="container">
    <h3>Created by <%= Poem.writer%></h3>
 </div>

<div class="container" class="box"   style="width: 400px;height:400px ;background-size: 100% 100%;
background-repeat: no-repeat;margin-top: 30px;
margin-left:10% ; border:4px solid brown; background-image:url(<%=Poem.bgtheme%>);" >
    


<h3><%=Poem.poem%></h3>
   
</div>
<div class="container" style="margin: 30px;">
    <i class="fa fa-thumbs-o-up fa-lg" aria-hidden="true"  onclick="likecount()"></i>
    <%=Poem.likes%>
    <form action="/poetry/<%=Poem._id%>/comments" method="POST">
      <div class="comment-form"> <input type="text" name="comment" placeholder="Add a New Comment"></div>
         <button type="submit" style="margin: 30px;">submit</button>
    </form>
    
</div>
 <div class="container">
     <h2>Comments:</h2>
 </div>
<div class="container">
<div class="jumbotron">
<% Poem.comments.forEach(function(comments){ %>
    
    <strong>
        <p style="float: left;margin-right: 10px;"><%=comments.author%>--></p>
    </strong>   
    <p> <%=comments.text%> </p>
<%})%>
</div>
</div>
<%- include('partials/footer.ejs');%>