<%- include('partials/header.ejs');%>
<meta name="viewport" content="width=device-width, initial-scale=1">


<div class="container" style="margin-top:20px ;">
    <header class="jumbotron" style="background-color:lawngreen;">
        <div class="container">
          <h1 style="float: left;">Welcome to the World of poetry <i class="fa fa-pencil-square-o" aria-hidden="true"></i></h1>
    <div class="row">
       <p class="col-sm-6"><a href="/poetry/new" class="btn btn-primary">Something Creative in Your Mind 
       </a>
       

      </p>
       <p class="col-sm-6"><a href="/" style="float: left;" class="btn btn-primary">Go to Home page</a></p>
    </div>   
      </div>
    </header>
        <div class="row" style="display: flex; flex-wrap: wrap;">
<% Poems.forEach(function(Poem){ %>
  
   <div  class="col-lg-4 col-md-6 col-sm-6 col-xs-12" >
             
           <div style="background-image: url(<%=Poem.bgtheme%>);" class="box">
              
            
            <strong style="overflow-wrap: break-word;">
               <p style="white-space:pre-wrap;"><%-Poem.poem%></p>
            </strong>              
             

           </div>
           
           <a href="/poetry/<%=Poem._id%>" class="btn btn-primary" style="margin-left: 40%;">More Info</a>
           

   </div> 
   
<% }) %>
</div>
</div>
<%- include('partials/footer.ejs');%>